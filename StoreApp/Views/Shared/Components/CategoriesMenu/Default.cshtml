@model IEnumerable<Category>

<div class="mt-3">
    <h6 class="lead" data-bs-toggle="collapse" data-bs-target="#categoriesCollapse" aria-expanded="false" aria-controls="categoriesCollapse">
        <i class="fa fa-solid fa-bars text-secondary"></i>
            Categories
    </h6>
</div>

<div class="my-4 collapse" id="categoriesCollapse">
    <ul class="list-group">
        @foreach (Category cat in Model)
        {
            <li class="list-group-item">
                <a asp-action="Index" asp-route-categoryId="@cat.CategoryId">
                    @cat.CategoryName (@await Component.InvokeAsync("CategoryNumber", @cat.CategoryId))
                </a>
            </li>
        }
    </ul>
</div>