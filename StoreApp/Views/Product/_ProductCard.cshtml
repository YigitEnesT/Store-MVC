@model Product

<div class="col-xxl-4 col-lg-6 col-md-6 col-sm-12 mb-3 d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="/images/default.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>
            <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary"><i class="fa-solid fa-arrow-right"></i> Get Details</a>
        </div>
    </div>

</div>
