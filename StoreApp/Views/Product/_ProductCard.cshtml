@model Product

<div class="col-xxl-3 col-lg-4 col-md-6 col-sm-12 mb-3 d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top object-fit-cover" height="200px" src="@Model?.ImageUrl" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>

            <div class="row justify-content-between flex-nowrap">
                <div class="col-auto">
                    <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary">
                        <i class="fa-solid fa-arrow-right"></i> Get Details
                    </a>
                </div>
                <div class="col-auto">
                    <form id="@Model.ProductId" asp-page="/cart" method="post">
                        <input type="hidden" asp-for="ProductId">
                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">

                        <button type="submit" class="btn btn-info">
                            <i class="fa fa-cart-plus"></i>
                        </button>
                    </form>  
                </div>

            </div>
        </div>
    </div>

</div>