@model IEnumerable<IdentityUser>

<div class="text-center my-5">
    <div class="display-6">Users</div>
</div>
<div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa-solid fa-plus"></i>    
            Create User
        </a>
    </div>

<div class="shadow">
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Roles</th>
                <th class="text-center">Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (IdentityUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td user-name="@user.UserName" user-role=""></td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a class="btn btn-info rounded-0" asp-action="Update" asp-route-id="@user.UserName">
                                <i class="fa fa-user-edit"></i>
                                Update</a>
                            <a class="btn btn-warning rounded-0" asp-action="ResetPassword" asp-route-id="@user.UserName">Reset Password</a>
                            <form method="post" asp-action="DeleteOneUser">
                                <input type="hidden" name="UserName" value="@user.UserName">
                                <button type="submit" class="btn btn-danger rounded-0">
                                    <i class="fa fa-solid fa-trash"></i>
                                     Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
